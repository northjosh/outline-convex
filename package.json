{
  "name": "outline-convex",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2",
      "better-auth": "1.4.9",
      "@convex-dev/better-auth": "^0.10.9",
      "alchemy": "^0.82.1"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @outline-convex/backend dev",
    "dev:setup": "turbo -F @outline-convex/backend dev:setup",
    "deploy": "turbo -F @outline-convex/infra deploy",
    "destroy": "turbo -F @outline-convex/infra destroy",
    "check": "oxlint && oxfmt --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@outline-convex/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@outline-convex/config": "workspace:*",
    "husky": "^9.1.7",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.1.2",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "oxfmt --write"
    ]
  },
  "packageManager": "bun@1.3.9"
}
